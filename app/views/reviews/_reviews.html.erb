<ul class="media-list">
  <% reviews.each do |review| %>
    <li class="media">
      <div class="media-body">
        <% if @anime.id == review.anime_id %>
          <div>
            <h2><%= link_to "#{review.episode_no}è©±", review_path(review) %></h2>
          </div>
          <div>
            <% if current_user == review.user %>
              <%= link_to "Delete", review, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-xs' %>
            <% end %>
          </div>
        <% end %>
      </div>
    </li>
  <% end %>
  <%= paginate reviews %>
</ul>