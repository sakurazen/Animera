<%= form_for(@review) do |f| %>
  <div class="col-md-4">
    <% if @review.errors.any? %>
      <div id="error_explanation">
        <ul>
          <% @review.errors.full_messages.each do |review| %>
            <li><%= review %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    
    <div class="form-group">
      <label>アニメのタイトル</label>
      <div><%= @review.anime.title %></div>
    </div>
    
    <%= f.hidden_field :anime_id %>
    
    <div class="form-group">
      <label>話数</label>
      <%= f.text_field :episode_no, class: 'form-control', autocomplete: 'off' %>
    </div>
    
    <div class="form-group">
      <label>点数</label>
      <%= f.text_field :episode_score, class: 'form-control', autocomplete: 'off' %>
    </div>
    
    <div class="form-group">
      <label>感想</label>
      <%= f.text_area :comment, class: 'form-control', rows: 10, autocomplete: 'off' %>
    </div>
    
    <%= f.submit '登録', class: 'btn btn-primary btn-block' %>
  </div>
<% end %>