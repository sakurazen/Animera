<%= form_for(@review) do |f| %>
  <div class="col-md-4">
    
    <div class="form-group">
      <label>アニメのタイトル</label>
      <div><%= @review.anime.title %></div>
    </div>
    
    <%= f.hidden_field :anime_id %>
    
    <div class="form-group">
      <label>話数</label>
      <%= f.text_field :episode_no, class: 'form-control', autocomplete: 'off' %>
    </div>
    
    <div class="form-group">
      <label>点数</label>
      <%= f.text_field :episode_score, class: 'form-control', autocomplete: 'off' %>
    </div>
    
    <div class="form-group">
      <label>感想</label>
      <%= f.text_area :comment, class: 'form-control', autocomplete: 'off' %>
    </div>
    
    <%= f.submit '登録', class: 'btn btn-primary btn-block' %>
  </div>
<% end %>